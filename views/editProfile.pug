extends layouts/main

block content
    form.form-container(action=routes.editProfile, method="POST")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar")
        input(type="name", name="name", placeholder="이름 입력" )
        input(type="email", name="email", placeholder="이메일 입력" )
        input(type="submit", value="수정완료")
    a.form-container__link(href=`/users${routes.changePassword}`) 비밀번호 변경
